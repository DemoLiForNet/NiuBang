
@{
    ViewBag.Title = "角色设置";
}
<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">
            审核
        </h3>
    </div>
    <div class="panel-body">
        @using (Ajax.BeginForm("RoleList", new { }, new AjaxOptions
        {
            AllowCache = false,
            HttpMethod = "post",
            UpdateTargetId = "dataGrid",

        }, new { @class = "form-horizontal", @id = "baseForm" }))
        {
            <div class="clearfix form-search">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label class="control-label col-md-3"></label>
                        <div class="col-md-9">
                            <button class="btn btn-primary" style="width:20%;" type="submit">
                                <span class="glyphicon glyphicon-zoom-in">&nbsp;</span>搜索
                            </button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3"></label>
                        <div class="col-md-9">
                            <button class="btn btn-primary" style="width:20%;" type="submit">
                                <span class="glyphicon glyphicon-zoom-in">&nbsp;</span>新增
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div id="dataGrid">
            @Html.Action("RoleList")
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryAjax")
}
